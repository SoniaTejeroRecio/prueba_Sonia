<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:id="@+id/etTareaInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nueva_tarea"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:importantForAutofill="yes" />


    <EditText
        android:id="@+id/etFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_seleccionar_fecha"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />


    <Spinner
        android:id="@+id/spinnerPrioridad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:padding="8dp" />


    <Button
        android:id="@+id/btnAgregarTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_agregar_tarea"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/btnVerPendientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_pendientes"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/btnVerHechas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_hechas"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />


    <ListView
        android:id="@+id/listViewTareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
